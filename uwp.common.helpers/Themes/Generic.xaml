<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP.Common.Helpers.Controls"
    xmlns:local2="using:UWP.Common.Helpers.Controls">

    <Style TargetType="local2:HtmlTextBlock" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:HtmlTextBlock">
                    <RichTextBlock Name="RichTextBlockCanvas" LineHeight="{TemplateBinding LineHeight}" TextWrapping="{TemplateBinding Wrapping}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}">
                        <Paragraph x:Name="HtmlParagraph"/>
                    </RichTextBlock>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local2:FontIconButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:FontIconButton">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>